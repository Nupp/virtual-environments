name: Build and push images
on:
  push:
    branches:
    - main
    paths:
    - "node/*"
  schedule:
    # As well as running when we make changes we should run at least
    # every week in order to pick up new parent images and new versions of Snyk
    - cron:  "0 0 * * 0"
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    strategy:
      fail-fast: false
      matrix:
        base:
          - <%= @seed[0] %>
        tag:
          - <%= @seed[1] %>
        target:
          - <%= @seed[2] %>
        include:<% @images.each do |base,tag,target| %>
          - base: <%= base %>
            tag: <%= tag %>
            target: <%= target %><% end %>
    steps:
    - 
      uses: actions/checkout@v2
    - name: Switch context
      run: |
        cd node
    -
      name: Login to DockerHub
      uses: docker/login-action@v1
      with:
        username: ${{ secrets.DOCKER_USERNAME }}
        password: ${{ secrets.DOCKER_PASSWORD }}
    - 
      uses: docker/build-push-action@v2
      env:
        DOCKER_BUILDKIT: "1"
      with:
        add_git_labels: true
        target: ${{ matrix.target }}
        tags: crizstian/devcontainer:${{ matrix.tag }}
        build-args: IMAGE=${{ matrix.base }}
        file: "Dockerfile.truffle"
